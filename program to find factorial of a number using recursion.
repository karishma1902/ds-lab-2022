//program to find factorial of a number//
#include<stdio.h>
int factorial(int);//the funtion declaration//
int main()
{
    int n,f;
    printf("enter the no. of of factorial required");
    scanf("%d",&n);//taking a number from the user to calculate its factorial//
    f=factorial(n);//call function//
    printf("%d",factorial(n));//printing the output of the code//
}


  int factorial(int n)//function defination//
{
    if(n==0)
    return 0;
    else if(n==1)
    return 1;
    else
    return n*factorial(n-1);//the program code used to call the function again//
}
